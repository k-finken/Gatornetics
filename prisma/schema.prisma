generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model players {
  id           Int     @id
  team_id      Int?
  firstName    String  @db.VarChar(255)
  lastName     String  @db.VarChar(255)
  team         String  @db.VarChar(255)
  year         Int
  position     String  @db.VarChar(2)
  jerseyNumber String  @db.VarChar(2)
  height       Int?
  weight       Int?
  homeCity     String? @db.VarChar(255)
  homeState    String? @db.VarChar(255)
  posStat1     Json?
  posStat2     Json?
  Conference   String? @db.VarChar(30)

  @@index([team_id], map: "teamID")
  @@fulltext([firstName])
  @@fulltext([lastName])
  @@fulltext([firstName, lastName])
}

model teams {
  id          Int     @id
  school      String  @db.VarChar(255)
  conference  String  @db.VarChar(10)
  color       String  @db.VarChar(7)
  division    String? @db.VarChar(10)
  wins        Int?
  expecWins   Float?  @db.Float
  recRank     Int?
  talentScore Float?  @db.Float
  losses      Int?
  overOff     Float?  @db.Float
  overDeff    Float?  @db.Float
  confWins    Int?
  confLosses  Int?
  homeW       Int?
  homeL       Int?
  awayW       Int?
  awayL       Int?
  playerIDS   Json?
  abbr        String? @db.VarChar(5)
}
